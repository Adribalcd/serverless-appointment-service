{
  "name": "serverless-appointment-service",
  "version": "1.0.0",
  "description": "Serverless appointment service with AWS Lambda, DynamoDB, SNS, SQS, and RDS",
  "main": "index.js",
  "authors": [
    "Adriana Balceda"
  ],
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint 'src/**/*.{ts,js}'",
    "lint:fix": "eslint 'src/**/*.{ts,js}' --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "prepare": "husky",
    "start:offline": "sls offline start",
    "deploy:dev": "sls deploy --stage dev",
    "deploy:prod": "sls deploy --stage prod"
  },
  "lint-staged": {
    "*.{js,ts,json,md,yml,yaml}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Adribalcd/serverless-appointment-service.git"
  },
  "author": "Adriana Balceda",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Adribalcd/serverless-appointment-service/issues"
  },
  "homepage": "https://github.com/Adribalcd/serverless-appointment-service#readme",
  "devDependencies": {
    "@types/aws-lambda": "^8.10.152",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^24.3.0",
    "@types/swagger-ui-dist": "^3.30.6",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/yamljs": "^0.2.34",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "jest": "^30.1.0",
    "lint-staged": "^16.1.5",
    "prettier": "^3.6.2",
    "serverless-aws-documentation": "^1.1.0",
    "serverless-dynamodb-local": "^0.2.40",
    "serverless-localstack": "^1.3.1",
    "serverless-offline": "^14.4.0",
    "serverless-typescript": "^0.0.5",
    "ts-jest": "^29.4.1"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.873.0",
    "@aws-sdk/client-eventbridge": "^3.876.0",
    "@aws-sdk/client-sns": "^3.873.0",
    "@aws-sdk/lib-dynamodb": "^3.876.0",
    "dotenv": "^17.2.1",
    "mysql2": "^3.14.3",
    "serverless-http": "^3.2.0",
    "swagger-ui-dist": "^5.27.1",
    "swagger-ui-express": "^5.0.1",
    "yamljs": "^0.3.0"
  }
}
